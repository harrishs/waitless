<% for (let restaurant of restaurants) { %>
  <div class ="<%= restaurant.id %>">
    <h1><%= restaurant.name %></h1>
    <p>Type: <%= restaurant.type %></p>
    <p>Wait Time: <%= restaurant.wait_time ? `${restaurant.wait_time} minutes` : `No wait time` %></p>
    <% if (restaurant.wait_time) { %>
      <% if (bookedWith != restaurant.waitlist_id) { %>
        <% include partials/_add_to_waitlist %>
      <% } else { %>
        <% include partials/_remove_from_waitlist %>
      <% } %>
    <% } %>
  </div>
<% } %>
